    <script>
        const audio = document.getElementById('bg-audio');
        let currentSolution = [];

        function toggleTheme() {
            const body = document.getElementById('body-tag');
            const btn = document.getElementById('theme-btn');
            if (body.hasAttribute('data-theme')) {
                body.removeAttribute('data-theme');
                btn.innerText = 'ğŸŒ™';
            } else {
                body.setAttribute('data-theme', 'dark');
                btn.innerText = 'â˜€ï¸';
            }
        }

        async function checkPass(val) {
            if (val.toUpperCase() === 'KOKA') {
                audio.play().catch(e => {});
                document.getElementById('lock-screen').style.opacity = '0';
                setTimeout(async () => {
                    document.getElementById('lock-screen').style.display = 'none';
                    await runStoryMode();
                }, 500);
            }
        }

        async function runStoryMode() {
            const storyScreen = document.getElementById('story-screen');
            const caption = document.getElementById('story-caption');
            const images = [
                { id: 'img-1', text: "Ø¨Ø­Ø¨Ùƒ.. ÙˆÙ…Ù† Ù‚Ù„Ø¨ÙŠ Ø¨Ø­Ø¨Ùƒ â¤ï¸" },
                { id: 'img-2', text: "ÙˆÙ…Ø§Ù‚Ø¯Ø±Ø´ Ø£Ø¹ÙŠØ´ Ù…Ù† ØºÙŠØ±Ùƒ.. ÙŠØ§ Ø±ÙˆØ­ÙŠ âœ¨" },
                { id: 'img-3', text: "ÙˆØ®Ù„ÙŠÙ†ÙŠ ÙÙŠ Ø­Ø¶Ù†Ùƒ.. Ø®Ù„ÙŠÙ†ÙŠ ğŸ’" }
            ];
            storyScreen.style.display = 'flex';
            for (let i = 0; i < images.length; i++) {
                const img = document.getElementById(images[i].id);
                img.style.display = 'block';
                caption.innerText = images[i].text;
                await new Promise(r => setTimeout(r, 2800));
                if (i < images.length - 1) img.style.display = 'none';
            }
            storyScreen.style.opacity = '0';
            setTimeout(() => {
                storyScreen.style.display = 'none';
                initMainContent();
            }, 500);
        }

        function initMainContent() {
            document.getElementById('main-content').style.display = 'block';
            generateRandomSudoku();
            startTypingSequence();
            startHearts();
        }

        function generateRandomSudoku() {
            const container = document.getElementById('sudoku-container');
            container.innerHTML = '';
            let base = [[1,2,3,4],[3,4,1,2],[2,3,4,1],[4,1,2,3]];
            let nums = [1,2,3,4].sort(() => Math.random() - 0.5);
            currentSolution = base.map(row => row.map(cell => nums[cell-1]));
            for (let r=0; r<4; r++) {
                for (let c=0; c<4; c++) {
                    const input = document.createElement('input');
                    input.type = 'number';
                    input.className = 'sudoku-cell';
                    if (Math.random() > 0.6) { 
                        input.value = currentSolution[r][c]; 
                        input.disabled = true; 
                    }
                    input.id = `cell-${r}-${c}`;
                    container.appendChild(input);
                }
            }
        }

        function validateSudoku() {
            let correct = true;
            for(let r=0; r<4; r++) {
                for(let c=0; c<4; c++) {
                    if(document.getElementById(`cell-${r}-${c}`).value != currentSolution[r][c]) correct = false;
                }
            }
            if(correct) {
                document.getElementById('win-modal').style.display = 'flex';
            } else { alert("Ø±ÙƒØ²ÙŠ ÙŠØ§ Ø¬Ø²Ù…Ø©! ğŸ˜‚â¤ï¸"); }
        }

        function showVideo() {
            document.getElementById('win-modal').style.display = 'none';
            document.getElementById('puzzle-section').style.display = 'none';
            document.getElementById('drive-video').src = "https://drive.google.com/file/d/11M6nmByQP-JTcJZG6NZ8OhlMDx0e7OUt/preview?autoplay=1";
            document.getElementById('victory-video-container').style.display = 'block';
            audio.pause();
        }

        async function startTypingSequence() {
            const el = document.getElementById('dynamic-text');
            let t1 = "Ø¨Ø­Ø¨Ùƒ ÙŠØ§ Ø¬Ø²Ù…Ø© ğŸŒ";
            for(let i=0; i<=t1.length; i++) { el.innerText = t1.slice(0, i); await new Promise(r => setTimeout(r, 100)); }
            await new Promise(r => setTimeout(r, 1000));
            for(let i=t1.length; i>=8; i--) { el.innerText = t1.slice(0, i); await new Promise(r => setTimeout(r, 50)); }
            let t2 = "ÙƒÙˆÙƒØ§ ğŸ˜˜";
            let base = "Ø¨Ø­Ø¨Ùƒ ÙŠØ§ ";
            for(let i=0; i<=t2.length; i++) { el.innerText = base + t2.slice(0, i); await new Promise(r => setTimeout(r, 100)); }
            document.getElementById('sub-text').style.display = 'block';
        }

        function startHearts() {
            setInterval(() => {
                const h = document.createElement('div');
                h.innerHTML = 'ğŸ’–'; h.className = 'heart';
                h.style.left = Math.random() * 100 + 'vw';
                h.style.fontSize = (Math.random() * 20 + 20) + 'px';
                document.body.appendChild(h);
                setTimeout(() => h.remove(), 4000);
            }, 300);
        }
